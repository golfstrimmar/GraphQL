model ColorVariable {
  id           Int       @id @default(autoincrement())
  variableName String
  hex          String
  rgba         String
  type         ColorType
  createdAt    DateTime  @default(now())
}




model FigmaImage {
  id             Int          @id @default(autoincrement())
  fileName       String
  filePath       String
  imageRef       String
  type           ImageType    @default(RASTER)
  createdAt      DateTime     @default(now())
  figmaProject   FigmaProject @relation("ProjectImages", fields: [figmaProjectId], references: [id], onDelete: Cascade)
  figmaProjectId Int
  @@index([figmaProjectId])
}




model JsonDocument {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  content   Json
  createdAt DateTime @default(now())
}

model Background {
  id              Int           @id @default(autoincrement())
  background      String
  value           String

  designSystem    DesignSystem? @relation(fields: [designSystemId], references: [id], onDelete: Cascade)
  designSystemId  Int?

  @@index([designSystemId])
}

model Color {
  id              Int           @id @default(autoincrement())
  color           String
  value           String

  designSystem    DesignSystem? @relation(fields: [designSystemId], references: [id], onDelete: Cascade)
  designSystemId  Int?

  @@index([designSystemId])
}

model Font {
  id              Int           @id @default(autoincrement())
  font            String
  value           String

  designSystem    DesignSystem? @relation(fields: [designSystemId], references: [id], onDelete: Cascade)
  designSystemId  Int?

  @@index([designSystemId])
}

model FontSize {
  id              Int           @id @default(autoincrement())
  fontSize        String
  value           String

  designSystem    DesignSystem? @relation(fields: [designSystemId], references: [id], onDelete: Cascade)
  designSystemId  Int?

  @@index([designSystemId])
}

model DesignSystem {
  id              Int           @id @default(autoincrement())
  name        String

  backgrounds Background[]
  colors      Color[]
  fonts       Font[]
  fontSizes   FontSize[]
  createdAt   DateTime     @default(now())

  creatorId   Int
  creator     User         @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  @@unique([creatorId, name], name: "creatorId_name")
}
