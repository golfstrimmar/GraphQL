datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ColorType {
  PALETTE
  TEXT
  BACKGROUND
  FILL
  STROKE
}

enum ImageType {
  RASTER
  VECTOR
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  name          String
  password      String?
  createdAt     DateTime       @default(now())
  googleId      String?        @unique
  picture       String?
  projects      Project[]      @relation("UserProjects")
  figmaProjects FigmaProject[] @relation("UserFigmaProjects")
}

model Project {
  id        Int      @id @default(autoincrement())
  name      String
  data      Json
  scssMixVar  String?
  createdAt DateTime @default(now())
  owner     User     @relation("UserProjects", fields: [ownerId], references: [id], onDelete: Cascade)
  @@index([id])
  @@index([ownerId])
  ownerId   Int
  @@unique([ownerId, name])
}

model FigmaProject {
  id            Int          @id @default(autoincrement())
  name          String
  createdAt     DateTime     @default(now())
  owner         User         @relation("UserFigmaProjects", fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId       Int
  previewUrl    String?
  figmaImages   FigmaImage[] @relation("ProjectImages")
  fileCache          Json?
  fileCacheUpdatedAt DateTime?
  colors      Json?   // массив строк
  fonts       Json?   // объект с family/sizes/weights
  textNodes   Json?   // массив TextNodeWithStyle
  @@unique([ownerId, name])
}


model Font {
  id        Int      @id @default(autoincrement())
  name      String
  scss      String
  texts     String[] // Postgres array (или JSON, если на SQLite)
  createdAt DateTime @default(now())
}


model ColorVariable {
  id           Int       @id @default(autoincrement())
  variableName String
  hex          String
  rgba         String
  type         ColorType
  createdAt    DateTime  @default(now())
}




model FigmaImage {
  id             Int          @id @default(autoincrement())
  fileName       String
  filePath       String
  imageRef       String
  type           ImageType    @default(RASTER)
  createdAt      DateTime     @default(now())
  figmaProject   FigmaProject @relation("ProjectImages", fields: [figmaProjectId], references: [id], onDelete: Cascade)
  figmaProjectId Int
  @@index([figmaProjectId])
}




model JsonDocument {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  content   Json
  createdAt DateTime @default(now())
}
