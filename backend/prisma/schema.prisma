datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ColorType {
  PALETTE
  TEXT
  BACKGROUND
  FILL
  STROKE
}

enum ImageType {
  RASTER
  VECTOR
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  name          String
  password      String?
  createdAt     DateTime       @default(now())
  googleId      String?        @unique
  picture       String?
  projects      Project[]      @relation("UserProjects")
  figmaProjects FigmaProject[] @relation("UserFigmaProjects")
  designSystems DesignSystem[]
}


model Project {
  id        Int      @id @default(autoincrement())
  name      String
  data      Json
  scssMixVar  String?
  createdAt DateTime @default(now())
  owner     User     @relation("UserProjects", fields: [ownerId], references: [id], onDelete: Cascade)
  @@index([id])
  @@index([ownerId])
  ownerId   Int
  @@unique([ownerId, name])
}

model FigmaProject {
  id            Int          @id @default(autoincrement())
  name          String
  createdAt     DateTime     @default(now())
  owner         User         @relation("UserFigmaProjects", fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId       Int
  previewUrl    String?
  figmaImages   FigmaImage[] @relation("ProjectImages")
  fileCache          Json?
  fileCacheUpdatedAt DateTime?
  colors      Json?   // массив строк
  fonts       Json?   // объект с family/sizes/weights
  textNodes   Json?   // массив TextNodeWithStyle
  @@unique([ownerId, name])
}




model ColorVariable {
  id           Int       @id @default(autoincrement())
  variableName String
  hex          String
  rgba         String
  type         ColorType
  createdAt    DateTime  @default(now())
}




model FigmaImage {
  id             Int          @id @default(autoincrement())
  fileName       String
  filePath       String
  imageRef       String
  type           ImageType    @default(RASTER)
  createdAt      DateTime     @default(now())
  figmaProject   FigmaProject @relation("ProjectImages", fields: [figmaProjectId], references: [id], onDelete: Cascade)
  figmaProjectId Int
  @@index([figmaProjectId])
}




model JsonDocument {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  content   Json
  createdAt DateTime @default(now())
}


model DesignTexts {
  id              Int           @id @default(autoincrement())
  tagText             String    @default("p")
  classText           String
  styleText           String

  designSystem    DesignSystem? @relation(fields: [designSystemId], references: [id], onDelete: Cascade)
  designSystemId  Int?

  @@index([designSystemId])
}

model DesignImage {
  id             Int           @id @default(autoincrement())
  publicId       String        // Cloudinary public_id
  url            String        // secure_url или трансформированный URL
  alt            String?
  createdAt      DateTime      @default(now())

  designSystem   DesignSystem? @relation(fields: [designSystemId], references: [id], onDelete: Cascade)
  designSystemId Int?

  @@index([designSystemId])
}


model DesignSystem {
  id              Int           @id @default(autoincrement())
  name            String
  designTexts     DesignTexts[]
  images          DesignImage[]   // ← связь с картинками
  createdAt       DateTime        @default(now())

  creatorId       Int
  creator         User            @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  @@unique([creatorId, name], name: "creatorId_name")
}
